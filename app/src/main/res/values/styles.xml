<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  BottomNavigation  -->
    <style name="BottomNavigationText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!--Contact Detail Button-->
    <style name="detail_btn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_primary_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">18dp</item>
    </style>

    <!-- Timer Primary Button -->
    <style name="timer_primary_btn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Timer Secondary Button -->
    <style name="timer_secondary_btn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_secondary_button</item>
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Dialog -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--  BottomSheet  -->
    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetModal</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AppBottomSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!--  Rounded Image  -->
    <style name="RoundedImage">
        <item name="cornerSize">50%</item>
    </style>

    <!--  Text  -->
    <style name="TextTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle.S20">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="TextTitle.S18">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColor">@color/white20</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLabel.S18">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

</resources>